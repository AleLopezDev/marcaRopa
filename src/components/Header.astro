<script>
  const menuBurger = document.getElementById("menuBurger");

  menuBurger?.addEventListener("click", () => {
    document.getElementById("imgLogo")?.classList.add("hidden");
    document.getElementById("burgerSvg")?.classList.add("hidden");
    document.getElementById("divImg")?.classList.add("hidden");

    document.getElementById("menuMini")?.classList.remove("hidden");
  });

  const menuCierre = document.getElementById("menuCierre");
  menuCierre?.addEventListener("click", () => {
    console.log("click");
    document.getElementById("menuMini")?.classList.add("hidden");
  });

  window.addEventListener("resize", () => {
    if (window.innerWidth >= 768) {
      // 768 es el breakpoint t√≠pico para 'md' en Tailwind
      document.getElementById("imgLogo")?.classList.remove("hidden");
      document.getElementById("burgerSvg")?.classList.remove("hidden");
      document.getElementById("divImg")?.classList.remove("hidden");

      document.getElementById("menuMini")?.classList.add("hidden");
    } else {
      document.getElementById("menuBurger")?.classList.add("flex");
    }
  });
</script>
